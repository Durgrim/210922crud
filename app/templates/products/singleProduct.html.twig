{% extends('base.html.twig') %}

{% block title %}
    <title>Product information</title>
{% endblock %}

{% block body %}
    <h1>Product information</h1>
     <a href="{{ path('getProducts') }}" class="btn btn-primary">Show all products</a>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Product Type</th>
                <th>Name</th>
                <th>Description</th>
                <th>Weight</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ product.uuid }}</td>
                <td>{{ product.productType }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.weight }}</td>
                <td>{{ product.enabled }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}